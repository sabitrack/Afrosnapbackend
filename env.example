# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/afrosnap_ai

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# AI Service Configuration (for future integration)
AI_SERVICE_URL=https://api.openai.com/v1
AI_SERVICE_KEY=your-ai-service-key

# Cloud Storage (for production)
CLOUD_STORAGE_BUCKET=afrosnap-ai-uploads
CLOUD_STORAGE_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,https://afrosnap.ai 